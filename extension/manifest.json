{
  "manifest_version": 2,
  "name": "GitHub Notifications",
  "version": "0.2.2",
  "description": "Displays your GitHub notifications",
  "homepage_url": "https://github.com/EdmundLeex/github-notification",
  "minimum_chrome_version": "46",
  "icons": {
    "128": "assets/images/icon-lg.png"
  },
  "permissions": [
    "alarms"
  ],
  "optional_permissions": [
    "tabs",
    "notifications"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "scripts/publisher.js",
      "scripts/notification.js",
      "scripts/app_cache.js",
      "scripts/badge.js",
      "scripts/settings.js",
      "scripts/api.js",
      "scripts/util.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "assets/images/icon.png"
    },
    "default_title": "GitHub Notifications",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}